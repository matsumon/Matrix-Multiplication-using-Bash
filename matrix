dims()
{
	cat $1 > full
	head -n1 < full > temp
	wc -l < full > dims
	wc -w < temp >> dims
	tr -s '\n' ' ' < dims 
	rm -rf full temp dims
	exit '0'
}
transpose()
{
	cat $1 > full
	head -n1 < full > temp
	wc -w < temp > cols
	read first last < cols
	i='0'
	while [ $first -ne $i ]	
	do
	(( i++ ))
	cut -f $i full > holder
	tr -s "\n" "\t" < holder >> main
	done
	cat main
}
if [ "$1" == "dims" ]
then
	dims $2
	
elif [ "$1" == "transpose" ]
then
	transpose $2
fi
